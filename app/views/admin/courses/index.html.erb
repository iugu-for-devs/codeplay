<h5 aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= admin_root_path %>"class="link-dark"><%=t('breadcrumb.dashboard_admin')%></a></li>
    <li class="breadcrumb-item active text-secondary" aria-current="page"><%=t('breadcrumb.course_managment')%></li>
  </ol>
</h5>

<div class="btn-group">
  <%= link_to t('buttons.register', model: Course.model_name.human), new_admin_course_path, class: 'btn btn-primary' %>
</div>

<p class="h5 mb-3 fw-normal text-center"><%= t('label.list', model: Course.model_name.human(count: :other)) %></p>

<% if @courses.empty?	%>
  <h3><%=t('.empty')%></h3>
<% end %>

<div>
  <table class="table table-bordered">
    <thead class="table-dark">
      <tr>
        <th scope="col"><%= Course.human_attribute_name(:name) %></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.name, admin_course_path(course), class:"btn btn-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
