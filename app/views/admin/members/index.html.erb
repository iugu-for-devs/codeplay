<div class="btn-group">
  <%= link_to 'Novo Membro', new_admin_member_path, class: 'btn btn-primary' %>
</div>

<p class="h5 mb-3 fw-normal text-center">Lista de membros</p>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
      </tr>
    </thead>
    <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
