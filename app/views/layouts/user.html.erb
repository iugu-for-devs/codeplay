<!DOCTYPE html>
<html>
  <head>
    <title>Codeplay</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="py-2 bg-light border-bottom">
        <div class="container d-flex flex-wrap">
          <ul class="nav me-auto">
            <li class="nav-item"><a href="<%= root_path %>" class="nav-link link-dark px-2"><%= t('buttons.home') %></a></li>
            <li class="nav-item"><a href="<%= courses_path %>" class="nav-link link-dark px-2"><%= t('buttons.courses') %></a></li>
            <li class="nav-item"><a href="<%= subscriptions_path %>" class="nav-link link-dark px-2"><%= t('buttons.subscriptions') %></a></li>
          </ul>
          <ul class="nav">
            <li class="nav-item"><%= link_to t('buttons.log_out'),  destroy_user_session_path, method: :delete,
                                                                                              data: { confirm: 'Deseja sair?' },
                                                                                              class: 'nav-link link-dark px-2' %></li>
            
          </ul>
        </div>
      </nav>
    </header>
    <%= render partial: 'shared/flashes' %>
    <%= yield %>
  </body>
</html>
