<div class="container-fluid">
  <div class="row">
      <%= render partial: 'sidebar' %>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

        <h5 aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="<%= user_profile_path %>"class="link-dark"><%=t('breadcrumb.dashboard_user')%></a></li>
            <li class="breadcrumb-item active text-secondary" aria-current="page"><%=t('breadcrumb.courses')%></li>
          </ol>
        </h5>

        <hr>
        <p class="h5 mb-3 fw-normal text-center"><%= t('label.list', model: Course.model_name.human(count: :other)) %></p>

        <div>
          <table class="table table-bordered">
            <thead class="table-dark">
              <tr>
                <th scope="col"><%= Course.human_attribute_name(:name) %></th>
                <th scope="col"><%= Course.human_attribute_name(:description) %></th>
              </tr>
            </thead>
            <tbody>
            <% current_user&.approved_courses&.each do |course| %>
              <tr>
                <td><%=link_to course.name, course_path(course) %></td>
                <td><%=link_to course.description,  course_path(course) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </main>
  </div>
</div>
