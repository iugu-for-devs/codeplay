<%= link_to 'Voltar', subscriptions_path %>

<% if @subscription.errors.any?%>
  <h4>Não foi possivel salvar. Encontramos alguns erros:</h4>
  <ul>
  <% @subscription.errors.full_messages.each do |error|  %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @subscription do |form| %>
<div> 
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>

    <%= form.label :description, 'Descrição' %>
    <%= form.text_field :description %>

    <%= form.label :price, 'Valor' %>
    <%= form.number_field :price, step: :any %>

    <%= form.submit 'Cadastrar' %>
</div>
<% end %>

