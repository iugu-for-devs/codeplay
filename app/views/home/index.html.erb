<div class="intro-section" id="home-section">
  <div class="slide-1" 
       style="background-image: url('<%= image_url('home_template_images/hero_1.jpg') %>')" 
       data-stellar-background-ratio="0.5">

    <div class="container">
      <div class="row align-items-center">
        <% if user_signed_in?  %>
          <%= render 'welcome_user' %>
        <% else %>
          <%= render 'intro_content' %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="courses-section">
  <div class="site-section courses-title" id="courses-section">
    <div class="container">
      <div class="row mb-5 justify-content-center">
        <div class="col-lg-7 text-center" data-aos="fade-up" data-aos-delay="">
          <h2 class="section-title"><%= Course.model_name.human count: 2 %></h2>
        </div>
      </div>
    </div>
  </div>
  <%= render 'courses_section' %>
</div>

<div class="site-section" id="programs-section">
  <div class="container">
    <%= render 'programs_section' %>
  </div>
</div>

<div id='testimonial-section'>
  <%= render 'testimonial_section' %>
</div>

<div id='why_choose'>
  <%= render 'why_choose' %>
</div>
