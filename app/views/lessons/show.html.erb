<h5 aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= root_path %>"class="link-dark">
                                Home</a></li>
    <li class="breadcrumb-item"><a href="<%= courses_path %>"class="link-dark">
                                Cursos</a></li>
    <li class="breadcrumb-item"><a href="<%= course_path(@lesson.course.id) %>"class="link-dark">
                                <%=@lesson.course.name%></a></li>
    <li class="breadcrumb-item active text-secondary" aria-current="page"><%=@lesson.name %></li>
  </ol>
</h5>

<br>


<div>

  <% if current_user.lesson_statuses.find_by(lesson_id: @lesson.id).done?  %>
    <%= link_to 'Concluído!', uncheck_done_course_lesson_path, method: :post, class:"btn btn-success"%>
  <% else %>
    <%= link_to 'Marcar como concluído', check_done_course_lesson_path, method: :post, class:"btn btn-secondary" %>
  <% end%>
</div>
<br>
<div class= "container-fluid px-1 bg-dark bg-gradient text-white text-justify">
  <div class="row gx-0">
    <div class="col">
      <div class="p-3" id='iframe' >
        <%= vimeo_iframe(@lesson.video_code) %>
      </div>
    </div>
    <div class="col">
      <div class="p-3">
        <h4 id='name'>
          <%= @lesson.name %>
        </h4>
        <br>
        <h6 id='description'>
          <p><%=Lesson.human_attribute_name(:description) %>:</p>
          <p><%= @lesson.description %></p>
        </h6>
      </div>
    </div>
  </div>
</div>
